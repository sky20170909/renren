/* pages/myren.wxss */
.container{
  background: #f2f2f2;
}
.nav{
  height:100rpx;
  line-height: 100rpx;
  background: #f2f2f2;
  font-size: 36rpx;
  text-align: center;
  padding-left: 30rpx;
}
.nav image{
  float:left;
  width:30rpx;
  margin-top: 26rpx;
}
.info{
  height:200rpx;
  width:100%;
  position: relative;
  text-align: center;
  font-size: 20rpx;
  color:#fff;
}
.info image{
  width:100%;
}
.num{
  display: block;
  z-index: 2;
  color:#fff;
  font-size: 60rpx;
  margin-top: -160rpx;
  margin-bottom: 20rpx;
}
.list{
  width:710rpx;
  margin: 20rpx auto;
  border-radius: 20rpx;
  box-shadow: 5rpx 5rpx 10rpx #dadada;
  background: #fff;
  padding: 20rpx 20rpx 0 20rpx;
  box-sizing: border-box;
}
.list_item{
  height:100rpx;
  border-bottom: 1px solid #dadada;
  padding: 10rpx 0;
}
.list_item image{
  width:80rpx;
  vertical-align: top;
}
.list_item view{
  display: inline-block;
  font-size: 30rpx;
  margin-left: 16rpx;
}
.list_item .time{
  font-size: 20rpx;
  color:rgb(153,153,153);
  margin-top: 10rpx;
}
.list_item view text{
  display: block;
}
.list_item .r{
  margin-top: 30rpx;
  font-size: 36rpx;
  color:rgb(0,153,0)
}
.list_item .colorAdd{
  color:rgb(224,31,30)
}
.list_item:last-child{
  border:none;
}