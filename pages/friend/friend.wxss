/* pages/list.wxss */

image{
  width:750rpx;
}
.list{
  background: #f7f7f7;
}
.list_item{
  height:100rpx;
  line-height: 100rpx;
  padding:0 30rpx;
  margin: 10rpx 0;
  background: #fff;
}
.list_item:nth-child(2n){
  background: #f7f7f7;
}
.list_item image{
  width:80rpx;
  height:80rpx;
  border-radius: 50%;
  vertical-align: middle
}
.list_item text{
  font-size: 30rpx;
  margin-left: 10rpx;
}
.list_item .left{
  display: inline-block;
  vertical-align: middle;
  width:290rpx;
  white-space:nowrap;
  overflow:hidden; 
  text-overflow:ellipsis;
}
.list_item .r{
  color:#999;
  font-size: 24rpx;
}