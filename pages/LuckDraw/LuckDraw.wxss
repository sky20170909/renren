.container{
  position: relative;
  overflow-scrolling : touch;
}
.bg>image{
  width:750rpx;
}
.content{
  position: absolute;
  top:220rpx;
  width:100%;
  font-size: 24rpx;
  color:#fff;
}
.rule{
  width:140rpx;
  height:50rpx;
  text-align: center;
  line-height: 50rpx;
  background: #f99;
  border-top-left-radius: 50rpx;
  border-bottom-left-radius: 50rpx;
}
.step{
  width:540rpx;
  margin: 70rpx auto 0;
  height:60rpx;
  box-sizing: border-box;
  color:#333;
  line-height: 60rpx;
  padding: 0 30rpx;
}
.step .l text{
  margin-right: 10rpx;
}
.img{
  text-align: center;
  position: absolute;
  left:45rpx;
  top:175rpx;
  z-index: 1;
}
.img image{
  width:660rpx;
}
.num{
  width:540rpx;
  height:540rpx;
  background: #fff;
  border-radius: 10rpx;
  position: relative;
  left:105rpx;
  top:13vw;
  color:#333;
  padding: 10rpx 0;
  box-sizing: border-box;
  perspective: 800;
	transform-style: preserve-3d;
  z-index: 2;
}
.num>view{
  width:160rpx;
  height:160rpx;
  border-radius: 10rpx;
  display: inline-block;
  margin-left: 15rpx;
  margin-bottom: 15rpx;
  box-sizing: border-box;
  font-size: 72rpx;
  color:#e61717;
  overflow: hidden;
  position: relative;

  /* box-shadow: 5rpx 5rpx 10rpx #ffebeb; */
}
.num>view>view{
  background: #ffebeb;
  position: absolute;
  left: 0;
  width: 160rpx;
  height: 160rpx;
  color: #fff;
  transition: 3s ease;
  backface-visibility: hidden;
  box-sizing: border-box;
}
.num>view .front{
  transform: rotateY(1260deg);
}
.num>view .con{
  transform: rotateY(0deg);
}
.num>view image{
  width:90rpx;
  position: absolute;
  z-index: 2;
  left:35rpx;
  top:20rpx;
}
.num>view .bg1{
  width:160rpx;
  height:160rpx;
  position: absolute;
  left:0;
  top:0;
  z-index: 1;
}
.num>view text{
  position: relative;
  z-index: 2;
  left:60rpx;
  top:30rpx;
  color:#e61717;
}
.num>view text.active{
  display: block;
  font-size: 20rpx;
  left:0;
  width:160rpx;
  text-align: center;
  top:60rpx;
  line-height: 140rpx;
  color:#333;
}
.record{
  width:690rpx;
  margin: 240rpx auto 0;
}
.title{
  text-align: center;
  font-size: 30rpx;
  color:#e61717;
}
.link{
  display: inline-block;
  width:122rpx;
  height:2rpx;
  border-bottom: 2rpx solid #e61717;
  position: relative;
  top:-10rpx;
  margin: 0 40rpx;
}
.box{
  width:100%;
  height:300rpx;
  background: #fff;
  color:#333;
  border-radius: 10rpx;
  padding: 30rpx 0;
  box-sizing: border-box;
  margin-top: 20rpx;
  overflow: hidden;
  position: relative;
}
.box .con{
  position: absolute;
  width:100%;
  left:0;
}
.box .con view{
  height:54rpx;
  line-height: 54rpx;
  padding: 0 30rpx;
 
}
.box .r{
  font-size: 24rpx;
  color:#999;
}
.proName{
  color:#ff6619;
}
.hidden{
  display: none !important;
}
.th-text {
  width: 100%;
  justify-content: center;
  color: #000;
  display: block;
  height: 70rpx;
  align-items: center;
  max-height: 70rpx;
}
.model{
  position:fixed;
  background:rgba(0,0,0,0.4);
  width:100%;
  height:100%;
  top:0;
  left:0;
  text-align: center;
  transition: all .3s linear;
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 30000; 
}
.content_model{
  width:580rpx;
  background: #fff;
  height:270rpx;
  border-radius: 10rpx;
  box-sizing: border-box;
  position: relative;
  overflow: hidden;
}
.content_model .c{
  height:170rpx;
  line-height: 170rpx;
}
.content_model text{
  font-size: 30rpx;
  color:#333;
}
.content_model button{
  display: inline-block;
  width:50%;
  border-radius:0rpx;
  position: absolute;
  bottom: 0;
  background: #fff;
  border-top:1px solid #999;
}
.content_model .cancel{
  left:0;
  border-right:1px solid #999;
}
button::after{ 
  border: none; 
  
}