page{
  padding-top: 80rpx;
}
.tab{
  height:80rpx;
  justify-items: center;
  align-items:center;
  background: #fff;
  display: flex;
  width:100%;
  position: fixed;
  z-index: 2;
  top:0;
}
.tab>view{
  flex: 1;
  text-align: center;
  height:80rpx;
  line-height: 80rpx;
  border-bottom:2rpx solid transparent;
}
.tab>view.active{
    border-bottom:2rpx solid rgb(224,31,60);
    color:rgb(224,31,60);
}
.list{
  display:none;
}
.list.active{
  display: block;
}
.list_item{ 
  width:710rpx;
  margin: 20rpx auto;
  border-radius: 20rpx;
  box-shadow: 5rpx 5rpx 10rpx #dadada;
  background: #fff;
  padding: 20rpx;
  box-sizing: border-box;
    z-index: 1;
}
.list_item image{
  width:160rpx;
  vertical-align: top;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
}
.list_item>view{
  display: inline-block;
  font-size: 36rpx;
}

.price,.unit{
  color:rgb(234,75,74);
  font-size: 24rpx;
  margin-top: 50rpx;
  display: inline-block;
}
.price{
  font-size: 48rpx;
}
.btn{
  width:120rpx;
  height:40rpx;
  line-height: 0.5;
  display: block;
  text-align: center;
  color:#a9a9a9;
  font-size: 28rpx;
  border:2rpx solid #a9a9a9;
  border-radius: 10rpx;
  margin-top: 120rpx;
}
.code{
  border-top:2rpx solid #dadada;
  height:40rpx;
  padding-top: 20rpx;
  padding-left: 170rpx;
  width:670rpx;
  box-sizing: border-box;
}
.code text{
 font-size: 28rpx;
 vertical-align: middle;
}
.copy{
  display: inline-block;
  width:80rpx;
  height:40rpx;
  line-height: 40rpx;
  border:1px solid #f00;
  color:#f00;
  float:right;
  text-align: center;
  margin-top: 8rpx;
}